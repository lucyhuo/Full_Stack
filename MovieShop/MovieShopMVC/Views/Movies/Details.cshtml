@model ApplicationCore.Models.MovieDetailsResponseModel


    

        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="@Model.PosterUrl" />
                </div>
                <div class="col">
                    @Model.Title<br>
                    @foreach (var genre in Model.Genres)
                    {
                        @genre.Name
                    }

                </div>
                <div class="col">
                    <button type="button" class="btn btn-outline-secondary">REVIEW</button><br>
                    <button type="button" class="btn btn-light">BUY</button>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p4>MOVIE FACTS</p4>
                    <ul class="list-group">
                        <li class="list-group-item">Release Date @Model.ReleaseDate </li>
                        <li class="list-group-item">Run Time @Model.RunTime </li>
                        <li class="list-group-item">Box Office @Model.Revenue </li>
                        <li class="list-group-item">Budget @Model.Budget </li>
                        <li class="list-group-item">Vestibulum at eros</li>
                    </ul>
                    <p4>TRAILERS</p4>
                    <ul class="list-group">
                        @foreach (var trailer in Model.Trailers)
                        {
                        <li class="list-group-item"> <a href=@trailer.TrailerUrl/> @Model.Title </li>
                        }
                    </ul>
                </div>
                <div class="col">
                    <ul class="list-group">
                        @foreach (var cast in Model.Casts)
                        {
                            <li class="list-group-item col">
                                <div class="col">
                                    <img src="@cast.ProfilePath" style="width: 5%; height: 5%;" />
                                </div>
                                <div class="col">
                                    @cast.Name
                                </div>
                                <div class="col">
                                    @cast.Character
                                </div>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    



